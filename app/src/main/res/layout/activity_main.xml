<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#03a9f4">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="118dp"
            android:layout_height="60dp"
            android:id="@+id/icon"
            android:src="@drawable/whitelogo"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/title"
            android:layout_marginTop="25dp"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:text="Main"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="25dp" />

    </LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Location"
        android:onClick="toUpdateLocation"
        android:textColor="@color/primaryColor"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_action_action_room"
        android:paddingLeft="5dp"
        android:typeface="monospace"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Hours"
        android:onClick="toUpdateHours"
        android:textColor="@color/primaryColor"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_action_action_schedule"
        android:paddingLeft="5dp"
        android:typeface="monospace"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pic_button"
        android:onClick="toPhoto"
        android:text="Add Pics"
        android:textColor="@color/primaryColor"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_action_image_photo_camera"
        android:paddingLeft="5dp"
        android:typeface="monospace"/>

    <Button
        android:id="@+id/button_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Your Trucks"
        android:textColor="@color/primaryColor"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/blue_truck"
        android:paddingLeft="8dp"
        android:typeface="monospace"
        />

    <Button
        android:id="@+id/push"
        android:text="Push / Coupon"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_action_wallet_giftcard"
        android:paddingLeft="8dp"
        android:textColor="@color/primaryColor"
        android:typeface="monospace"/>

    <Button
        android:id="@+id/log_out"
        android:onClick="logOut"
        android:text="Log Out"
        android:background="@color/primaryColorLight"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:drawableLeft="@drawable/ic_action_action_exit_to_app"
        android:textColor="@color/primaryColor"
        android:typeface="monospace"/>


</LinearLayout>
