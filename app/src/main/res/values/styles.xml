<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>



    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:textColor">@color/primaryColorDark</item>
        <item name="color">@color/primaryColorDark</item>
        <item name="android:textColorHint">@color/primaryColorDark</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:dialogTheme">@style/Theme.AppCompat.Light.Dialog</item>


    </style>

    <style name="Dialog.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primaryColorDark</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryColor</item>
    </style>


    <style name="CustomTheme.Dialog" parent="android:Theme.Holo.Light.Dialog">
        <!--<item name="android:buttonBarButtonStyle">@style/CustomTheme.Dialog.Button</item>-->
        <!-- See caveat -->
        <item name="android:windowBackground">@color/primaryColor</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:windowNoTitle">true</item>
    </style>

